@app.route('/', methods=['GET', 'POST'])
def login():
    error = None
    if request.method == 'POST':
        username = request.form.get('username', '')
        password = request.form.get('password', '')
        license_key = request.form.get('license', '')
        if username == USERNAME and password == PASSWORD and verify_license(license_key):
            session['logged_in'] = True
            return redirect(url_for('dashboard'))
        else:
            error = 'نام کاربری، رمز عبور یا لایسنس اشتباه است.'
    return render_template_string(login_page, error=error)

@app.route('/dashboard')
def dashboard():
    if not session.get('logged_in'):
        return redirect(url_for('login'))
    return render_template_string(dashboard_page)

@app.route('/status')
def status():
    if not session.get('logged_in'):
        return jsonify({'error': 'unauthorized'}), 401
    cpu = psutil.cpu_percent()
    ram = psutil.virtual_memory().percent
    net_up, net_down = update_network_usage()
    tunnel_up, tunnel_down = update_tunnel_usage()
    return jsonify({
        'cpu': cpu,
        'ram': ram,
        'net_up': net_up,
        'net_down': net_down,
        'tunnel_up': tunnel_up,
        'tunnel_down': tunnel_down
    })

@app.route('/set_tunnel', methods=['POST'])
def set_tunnel():
    if not session.get('logged_in'):
        return redirect(url_for('login'))
    ip = request.form.get('ip', '').strip()
    port = request.form.get('port', '').strip()
    # ساده بررسی الگو (IPv4 و پورت)
    import re
    ip_pattern = re.compile(r'^(\d{1,3}\.){3}\d{1,3}$')
    port_pattern = re.compile(r'^\d{1,5}$')
    if not ip_pattern.match(ip):
        return "IP نامعتبر است", 400
    if not port_pattern.match(port):
        return "پورت نامعتبر است", 400
    tunnel_info['ip'] = ip
    tunnel_info['port'] = port
    # ریست مقادیر قبلی برای محاسبه سرعت درست
    with tunnel_lock:
        prev_tunnel['bytes_sent'] = None
        prev_tunnel['bytes_recv'] = None
        prev_tunnel['time'] = None
    return redirect(url_for('dashboard'))

@app.route('/logout', methods=['POST'])
def logout():
    session.clear()
    return redirect(url_for('login'))

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=APP_PORT)
PYEOF

  echo "[*] ایجاد فایل سرویس systemd..."
  cat > /etc/systemd/system/lorna_monitor.service <<'SEOF'
[Unit]
Description=Lorna Network Monitor
After=network.target

[Service]
User=root
WorkingDirectory=/opt/network_monitor
ExecStart=/opt/network_monitor/venv/bin/python /opt/network_monitor/app.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
SEOF

  echo "[*] فعال سازی سرویس..."
  systemctl daemon-reload
  systemctl enable lorna_monitor.service
  systemctl restart lorna_monitor.service

  echo "[+] نصب با موفقیت انجام شد. به آدرس http://سرور_شما:5000 مراجعه کنید."
}

function remove_panel() {
  echo "[*] حذف سرویس و فایل‌ها..."
  systemctl stop lorna_monitor.service
  systemctl disable lorna_monitor.service
  rm -f /etc/systemd/system/lorna_monitor.service
  rm -rf "$APP_DIR"
  systemctl daemon-reload
  echo "[+] پنل حذف شد."
}

while true; do
  print_menu
  read choice
  case $choice in
    1) install_panel ;;
    2) remove_panel ;;
    3) exit 0 ;;
    *) echo "گزینه نامعتبر است. لطفا دوباره تلاش کنید." ;;
  esac
  read -p "برای ادامه کلیدی بزنید..."
done
