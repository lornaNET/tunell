@app.route('/set_license', methods=['POST'])
def set_license():
    if 'logged_in' not in session or not session['logged_in']:
        return redirect(url_for('login'))
    new_key = request.form.get('license', '').strip()
    if new_key:
        try:
            with open(LICENSE_FILE, 'w') as f:
                f.write(new_key)
            app.logger.info("Ù„Ø§ÛŒØ³Ù†Ø³ Ø¬Ø¯ÛŒØ¯ Ø«Ø¨Øª Ø´Ø¯.")
        except Exception as e:
            app.logger.error(f"Ø®Ø·Ø§ Ø¯Ø± Ø«Ø¨Øª Ù„Ø§ÛŒØ³Ù†Ø³: {e}")
    return redirect(url_for('dashboard'))

@app.route('/get_system_data')
def get_system_data():
    if 'logged_in' not in session or not session['logged_in']:
        return jsonify({"error": "not logged in"}), 401
    cpu = psutil.cpu_percent(interval=None)
    ram = psutil.virtual_memory().percent
    up, down = net_speed()
    xcount, xstate = xray_users()
    return jsonify({
        "cpu": cpu,
        "ram": ram,
        "net": {"upload_mbps": up, "download_mbps": down},
        "xray": {"users": xcount, "state": xstate}
    })

